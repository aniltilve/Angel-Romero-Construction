@model ARC.Models.SiteLanguage
@{
    ViewBag.Title = "Home Page";
    var base64 = Convert.ToBase64String(Model.image);
    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
}

<div class="row">
    <div class="col-md-12 resize_horizontal resize_vertical">
        <img class="img-responsive img-home" src="@imgSrc" style="height:@Model.Height;width:@Model.Width" />
    </div>
</div>
<div class="row">
    <div class="col-md-12 resize_horizontal resize_vertical">
        @Model.text
    </div>
</div>