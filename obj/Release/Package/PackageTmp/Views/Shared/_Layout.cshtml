<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Angel Romero Construction, LLC</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row">
        <div class="col-md-4"><img id="img-logo" class="img-responsive" src="~/Content/Images/Logo.gif" /></div>
        <div class="col-md-offset-11"></div>
    </div>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Services", "Services", "Home")</li>
                    <li>@Html.ActionLink("Portfolio", "Portfolio", "Home")</li>
                    <li>@Html.ActionLink("Reviews", "Review", "Home")</li>
                    <li>@Html.ActionLink("About Me", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact Me", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
            <footer>
                <div class="row">
                    <div class="col-md-12 text-center">
                        @Html.ActionLink("Home", "Index", "Home") |
                        @Html.ActionLink("Services", "Index", "Home") |
                        @Html.ActionLink("Portfolio", "Portfolio", "Home") |
                        @Html.ActionLink("Reviews", "Index", "Home") |
                        @Html.ActionLink("About Me", "About", "Home") |
                        @Html.ActionLink("Contact Me", "Contact", "Home")
                    </div>
                </div>
                <p>&copy; @DateTime.Now.Year - Angel Romero</p>
            </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
